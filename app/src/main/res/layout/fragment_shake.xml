<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  tools:context=".NearByFragment"
			  android:orientation="vertical"
>
	<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
	>

		<ImageView
				android:id="@+id/toolbar"
				android:src="@drawable/menu_bar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:ignore="ContentDescription"/>

	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">
		<ImageView
				android:src="@drawable/pic_nearby"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:ignore="ContentDescription"/>
		<TextView
				android:layout_marginTop="30dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/shakePhoneText"
				android:textSize="25sp"
				android:textColor="@color/black"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/orPressBt"
				android:textSize="15sp"/>
		<Button
				android:id="@+id/shake_phone_fine"
				android:text="@string/finePhone"
				android:textColor="@color/white"
				android:textSize="20sp"
				android:background="@color/purple"
				android:layout_margin="10dp"
				android:paddingLeft="30dp"
				android:paddingRight="30dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<TextView
				android:layout_marginTop="30dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/nearByFine"
				android:textSize="15sp"/>

	</LinearLayout>

</LinearLayout>